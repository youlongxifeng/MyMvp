<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.project.android.ui.main.MainActivity">

    <TextView
        android:id="@+id/return_value_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.android.advertisement.adslibrary.AdvertisementView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:layout_constraintTop_toBottomOf="@id/return_value_name"

        ></com.android.advertisement.adslibrary.AdvertisementView>

</android.support.constraint.ConstraintLayout>
